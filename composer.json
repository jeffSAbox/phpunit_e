{
    "name": "jeffsabox/phpunitestudo",
    "type": "library",
    "require": {
        "php": "^7.3"
    },
    "authors": [
        {
            "name": "jeffsabox",
            "email": "jeff_zb@msn.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "PhpUnitEstudo\\Leilao\\": "src",
            "PhpUnitEstudo\\Tests\\": "Tests"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.2",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "scripts": {
        "code-check": "vendor\\bin\\phpcs --colors",
        "code-corrige": "vendor\\bin\\phpcbf --colors",
        "test-ava": "vendor\\bin\\phpunit" 
    },
    "scripts-descriptions": {
        "test-ava": "Teste geral do PHPUnit"
    }

}
